#!/bin/bash
set -eu
ROOT=$(readlink -f "$(dirname $0)/..")
rankings=$1
db=${2-$ROOT/games/games.db}

sqlite3 "$db" 3<"$rankings" <<EOF
create table if not exists ratings (
  rank int,
  name text,
  bot boolean,
  rating float,
  games int
);
delete from ratings;
.mode csv
.import /dev/fd/3 ratings
EOF
